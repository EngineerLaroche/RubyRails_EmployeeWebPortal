<% provide(:title, @organisme.nom) %>

<div class="row">
  <h1>Compte Organisme</h1>
  <aside class="col-md-12">
    <section>
      <br/>
        <font size="5">
          <strong>ID organisme : <a><%= @organisme.id %></a></strong>
        </font>
        <h1>
        <font size="6">
          <strong>Nom : <a><%= @organisme.nom %></a></strong>
        </font>
        <br/>
        <font size="5">
          <strong>Email : <a><%= @organisme.email %></a></strong>
        </font>
      </h1>
      <% if current_user.role == 'directeur' %>
         <%= link_to "Modifier organisme", edit_organisme_path(@organisme) %>
      <% end %>   
     <br/>
      <br/>
      <hr>
    <hr>
    <div id="main-container" class="container">
      <div id="Contact" class="col-md-6">
      <h1>
        <font size="5">
          <strong>Contact</strong>
        </font>
      </h1>
      <br/>
      <font size="2">
        <h1>Telephone : <a> <%= @organisme.tel %> </a></h1>
        <h1>Fax: <a> <%= @organisme.fax %> </a></h1>
      </font>
    </div>

    <div id="Adresse" class="col-md-6">
      <h1>
        <font size="5">
          <strong>Adresse</strong>
        </font>
      </h1>
      <br/>
      <font size="2">
        <h1>Num.: <a> <%= @organisme.no_civique %> </a></h1>
        <h1>Rue: <a> <%= @organisme.rue %> </a></h1>
        <h1>Ville: <a> <%= @organisme.ville %> </a></h1>
        <h1>Province: <a> <%= @organisme.province %> </a></h1>
        <h1>Code postal: <a> <%= @organisme.code_postal %> </a></h1>
        <br/>
      </font>
    </div>
  </div>
    <hr>
      <h1>
        <font size="5">
          <strong>Vos Organisme Referents ( <%= @vosorganismereferents %> )</strong>
        </font>
      </h1>
      <br/>
      <% if current_user.role == 'coordonateur' || current_user.role == 'directeur' %>
        <div class="row">
        <aside class="col-md-4">
          <%= button_to "Ajouter ou Retirer un Organisme Referent", ajouter_retirer_org_ref_organisme_path(@organisme) , class: "btn btn-primary", method: :get %>
        </aside>
        </div>
      <% end %>
        <%= render template: 'organisme_referents/index' %>
      <hr>
      <h1>
        <font size="5">
          <strong>Vos Points de Services ( <%= @vospointservices %> )</strong>
        </font>
      </h1>
      <br/>
      <% if current_user.role == 'directeur' %>
      <div class="row">
        <aside class="col-md-4">
          <%= button_to "Ajouter ou Retirer un Point de Service", ajouter_retirer_point_service_organisme_path(@organisme) , class: "btn btn-primary", method: :get %>
        </aside>
        </div>
      <% end %>
        <%= render template: 'point_of_services/index' %>
      <hr>
      <h1>
        <font size="5">
          <strong>Vos Referents ( <%= @vosreferents %> )</strong>
        </font>
      </h1>
      <br/>
      <% if current_user.role == 'coordonateur' || current_user.role == 'directeur' %> 
        <div class="row">
        <aside class="col-md-4">
          <%= button_to "Ajouter ou Retirer un Referent", ajouter_retirer_ref_organisme_path(@organisme) , class: "btn btn-primary", method: :get %>
        </aside>
        </div>
      <% end %>
        <%= render template: 'referents/index' %>
        <br/>
        <hr>
        <h1>
        <font size="5">
          <strong>Notifications</strong>
        </font>
      </h1>
      <br/>
         <font size="2">
        <h1>Actif depuis : <a> <%= @organisme.created_at %> </a></h1>
        <h1>Derniere Mise a Jour : <a> <%= @organisme.updated_at %> </a></h1>
      </font>
    </section>
  </aside>
</div>