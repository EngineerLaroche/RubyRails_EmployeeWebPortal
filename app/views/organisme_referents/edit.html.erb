<% provide(:title, "Edit organisme referent") %>
<h1>Modifier l'Organisme Referent</h1>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@organisme_referent) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

          <div id="main-container" class="container">
            <div id="Info Organisme Referent" class="col-md-6">

            <h1><a>Information</a></h1>

            <% if current_user.role == 'directeur' || current_user.role == 'coordonateur' %>
              <%= f.label :est_actif %>
              <%= f.select :est_actif, [['Actif', true], ['Inactif', false]] %>
            <% end %>

            <%= f.label :nom %>
            <%= f.text_field :nom, class: 'form-control', placeholder: 'nom' %>

            <%= f.label :tel %>
            <%= f.telephone_field :tel, class: 'form-control', placeholder: 'xxx-xxx-xxxx' %>

            <%= f.label :fax %>
            <%= f.telephone_field :fax, class: 'form-control', placeholder: 'xxx-xxx-xxxx' %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control', placeholder: 'exemple@email.com' %>

            <%= f.label :website %>
            <%= f.text_field :website, class: 'form-control', placeholder: 'www.exemple.com' %>
        </div>
        <div id="Adresse Organisme Referent" class="col-md-6">

            <h1><a>Adresse</a></h1>

            <%= f.label :no_civique %>
            <%= f.text_field :no_civique, class: 'form-control', placeholder: '123' %>

            <%= f.label :rue %>
            <%= f.text_field :rue, class: 'form-control' , placeholder: 'Une Rue'%>

            <%= f.label :ville %>
            <%= f.text_field :ville, class: 'form-control', placeholder: 'Ville' %>

            <%= f.label :province %>
            <%= f.collection_select :province, OrganismeReferent::PROVINCES, :to_s, :humanize %>

            <%= f.label :code_postal %>
            <%= f.text_field :code_postal, class: 'form-control', placeholder: 'A1B 2C3' %>
        </div>
      </div>
    <br/>
    <br/>
      <%= f.label "Si vous connaissez l'ID de l'Organisme" %>
      <%= f.number_field :organismes_id, class: 'form-control' %>

      <%= f.submit "Sauvegarder les changements", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>