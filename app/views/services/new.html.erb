<% provide(:title, 'creerservice') %>
<h1>Créer un nouveau Service</h1>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@service) do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <div id="main-container" class="container">
            <div id="Info Service" class="col-md-6">

                <h1><a>Information</a></h1>

                <%= f.label :nom %>
                <%= f.text_field :nom, class: 'form-control', placeholder: 'nom' %>

                <%= f.label :description %>
                <%= f.text_field :description, class: 'form-control', placeholder: 'Description du service. Maximum 100 caractères'%>
            </div>
        
            <div id="Tarification Service" class="col-md-6">

                <h1><a>Tarification</a></h1>

                <%= f.label "Tarification Subventionnee" %>
                <%= f.select :est_subventionnee, [['Oui', true], ['Non', false]] %>

                <%= f.label "Tarification Parent" %>
                <%= f.number_field :tarification_parent, class: 'form-control', placeholder: '0 ($)'%>

                <%= f.label "Tarification CISSS" %>
                <%= f.number_field :tarification_cisss, class: 'form-control', placeholder: '0 ($)' %>

            </div>
        </div>

        <%= f.label "Si vous connaissez l'ID du Local" %>
        <%= f.number_field :un_locals_id, class: 'form-control' %>

        <%= f.submit "Créer le service", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
